---
// Shared navigation component
---

<nav class="fixed top-0 left-0 right-0 nav-bg backdrop-blur-xl z-50">
  <div class="max-w-7xl mx-auto px-6 py-4 flex items-center justify-between">
    <a href="/" class="flex items-center">
      <img src="/evvl-logo.png" alt="Evvl" class="h-8" />
    </a>
    <div class="hidden md:flex items-center gap-10">
      <a href="/#features" class="text-sm text-muted hover:text-primary transition-colors">Features</a>
      <a href="/#how-it-works" class="text-sm text-muted hover:text-primary transition-colors">How It Works</a>
      <a href="/keys-and-calls" class="text-sm text-muted hover:text-primary transition-colors">Keys & Calls</a>
      <a href="/#faq" class="text-sm text-muted hover:text-primary transition-colors">FAQ</a>
    </div>
    <div class="flex items-center gap-3">
      <!-- Theme toggle -->
      <button onclick="toggleTheme()" class="theme-toggle" aria-label="Toggle theme">
        <svg class="w-5 h-5 sun-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z" />
        </svg>
        <svg class="w-5 h-5 moon-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z" />
        </svg>
      </button>
      <a href="https://app.evvl.ai" class="hidden sm:block text-sm text-muted hover:text-primary transition-colors">Web App</a>
      <a href="/download" class="btn-primary text-sm !py-2.5 !px-5">
        Download
      </a>
    </div>
  </div>
</nav>
