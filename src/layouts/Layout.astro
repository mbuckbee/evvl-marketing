---
interface Props {
  title?: string;
  description?: string;
}

const {
  title = "Evvl - Compare AI Models Side by Side",
  description = "Compare outputs from multiple AI models in one place. Evaluate GPT-4, Claude, Gemini, and more with side-by-side comparisons."
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <link rel="icon" type="image/png" sizes="32x32" href="/evvl-icon-32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/evvl-icon-16.png" />
    <link rel="apple-touch-icon" sizes="180x180" href="/evvl-icon-180.png" />
    <link rel="apple-touch-icon" sizes="152x152" href="/evvl-icon-152.png" />
    <link rel="apple-touch-icon" sizes="120x120" href="/evvl-icon-120.png" />
    <meta name="description" content={description} />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800;900&display=swap" rel="stylesheet">

    <!-- Theme detection - runs before page render to prevent flash -->
    <script is:inline>
      (function() {
        const stored = localStorage.getItem('theme');
        if (stored === 'dark') {
          document.documentElement.classList.add('dark');
        } else if (stored === 'light') {
          document.documentElement.classList.add('light');
        }
        // If no stored preference, system preference is used via CSS media queries
      })();
    </script>

    <!-- Open Graph -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />

    <!-- Privacy-friendly analytics by Plausible -->
    <script async src="https://plausible.io/js/pa-_obU0K7gpnnNMGqGmG74x.js"></script>
    <script>
      window.plausible=window.plausible||function(){(plausible.q=plausible.q||[]).push(arguments)},plausible.init=plausible.init||function(i){plausible.o=i||{}};
      plausible.init()
    </script>
  </head>
  <body class="antialiased">
    <slot />

    <!-- Theme toggle script -->
    <script is:inline>
      function toggleTheme() {
        const html = document.documentElement;
        const isDark = html.classList.contains('dark') ||
          (!html.classList.contains('light') && window.matchMedia('(prefers-color-scheme: dark)').matches);

        if (isDark) {
          html.classList.remove('dark');
          html.classList.add('light');
          localStorage.setItem('theme', 'light');
        } else {
          html.classList.remove('light');
          html.classList.add('dark');
          localStorage.setItem('theme', 'dark');
        }

        updateToggleIcons();
      }

      function updateToggleIcons() {
        const html = document.documentElement;
        const isDark = html.classList.contains('dark') ||
          (!html.classList.contains('light') && window.matchMedia('(prefers-color-scheme: dark)').matches);

        document.querySelectorAll('.sun-icon').forEach(el => {
          el.style.display = isDark ? 'block' : 'none';
        });
        document.querySelectorAll('.moon-icon').forEach(el => {
          el.style.display = isDark ? 'none' : 'block';
        });
      }

      // Initialize icons on load
      document.addEventListener('DOMContentLoaded', updateToggleIcons);

      // Also update if system preference changes
      window.matchMedia('(prefers-color-scheme: dark)').addEventListener('change', updateToggleIcons);

      // Expose toggle function globally
      window.toggleTheme = toggleTheme;
    </script>
  </body>
</html>

<style is:global>
  @import '../styles/global.css';
</style>
